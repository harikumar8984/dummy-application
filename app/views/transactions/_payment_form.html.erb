<div class="rkv_wrapper" id = 'payment_form' style = 'display: none'>
  <div class="rkv_form_wrapper rkv_checkout">
    <h1>Checkout</h1>
    <div class="rkv_col2">
      <%= render partial: 'transactions/paypal_payment_form' %>
      <div class="rkv_form_container">
        <div class="rkv_form">
          <img src="/assets/secure-payments-powered-by-stripe.gif"style="width: 100%;">
          <%= form_tag subscripe_transactions_path, method:'post', class:'form-horizontal', id: 'subscription_payment_form' do %>
              <%= hidden_field_tag :user_type, @user_type %>
              <%= hidden_field_tag :card_id %>
              <%= hidden_field_tag :auth_token, @auth_token%>
              <%= hidden_field_tag :subscription_type, @subscription_type%>
              <%= hidden_field_tag :amount, @amount%>
              <%= hidden_field_tag :payment_gateway_type, @payment_gateway_type || 'Stripe'%>

              <div id="payment_error">
                <div class="message">
                  <%= flash[:message] %>
                  <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
                </div>
              </div>
              <div id="payment_type_div">
                <%= render partial: 'transactions/stripe_payment_form' %>
             </div>
          <%end%>
        </div>
      </div>
    </div>
    <div class="rkv_col2">
      <div class="rkv_subscription_table">
        <div class="rkv_items_list_container">
          <ul>
            <li><span class ='rkv_susbcription_title'></span> <span class="rkv_price"></span></li>
          </ul>
        </div>
        <div class="rkv_total_price">
          <div class="total_text_label">Total:</div>
          <div class="rkv_total_amount"></div>
        </div>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/fastclick/1.0.6/fastclick.js"></script>
<script type="text/javascript">
</script>
<style type="text/css">
  #paypal_transaction{
    display: none;
  }
</style>